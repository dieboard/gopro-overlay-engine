<layout>
    <translate x="10" y="1000">
        <component type="chart" metric="alt" seconds="30"/>
        <translate x="290" y="40">
            <component type="text" align="right">Alt (m)</component>
        </translate>
    </translate>

    <translate x="320" y="1000">
        <component type="chart" metric="speed" units="mph" seconds="30"/>
    </translate>

    <translate x="50">
        <component type="moving_map" x="0" y="100" size="384" zoom="16" corner_radius="35"/>
        <component type="journey_map" x="0" y="500" size="384" corner_radius="35"/>
    </translate>

<!--    <translate x="500" y="100">-->
<!--        <component type="moving_journey_map" name="moving_map" x="0" y="100" size="384" zoom="13"/>-->
<!--    </translate>-->

    <translate x="800">
        <translate y="50">
            <component type="cairo_circuit_map" size="1024" line-width="0.05" outline="0,0,255,0" fill="0,0,255,128" rotate="-90" loc-size="0.04" loc-outline="0,0,0,128" loc-fill="255,255,255,128"/>
        </translate>

        <translate y="100">
            <component type="cairo_gauge_marker" size="512" metric="speed" units="mph" min="0" max="30"/>
        </translate>
    </translate>
</layout>